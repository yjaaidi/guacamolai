{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ES2024"],
    "types": [],
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": ["lib/**/*.ts", "index.spec.ts", "index.ts"],
  "references": [
    {
      "path": "../shared-util/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx"
  ]
}
