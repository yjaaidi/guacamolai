{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "ES2024"],
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "out-tsc/playwright",
    "sourceMap": false
  },
  "include": ["e2e/**/*.ts", "e2e/**/*.js", "playwright.config.ts"],
  "exclude": [
    "out-tsc",
    "test-output",
    "eslint.config.js",
    "eslint.config.mjs",
    "eslint.config.cjs"
  ]
}
