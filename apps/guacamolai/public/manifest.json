{
  "name": "Guacamolai",
  "description": "Smash your advocate activity into delicious guacamole for Advocu",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["./content.js"],
      "matches": ["https://app.advocu.com/*", "http://localhost:5173/*"]
    }
  ],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
