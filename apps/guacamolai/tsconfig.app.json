{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/guacamolai",
    "lib": ["dom", "ES2024"],
    "types": ["chrome", "node"],
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "out-tsc/guacamolai/tsconfig.app.tsbuildinfo"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../../packages/core/lib/activity.ts",
    "../../packages/core/lib/extension-storage.ts",
    "../../packages/core/lib/html-page.ts",
    "../../packages/core/lib/llm.fake.ts",
    "../../packages/core/lib/llm.ts",
    "../../packages/infra/lib/chrome-storage.ts",
    "../../packages/infra/lib/fetch-html-page.ts",
    "../../packages/infra/lib/gemini.ts",
    "../../packages/infra/lib/local-storage.ts"
  ],
  "references": [
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/infra/tsconfig.lib.json"
    }
  ]
}
